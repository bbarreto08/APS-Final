@model PagedList.IPagedList<APS.Models.Venda>
@using PagedList.Mvc

@{
    ViewBag.Title = "Home";
}

<div class="x_panel">
    <div class="x_title">
        <h2>Vendas</h2>       
    </div> 

    @if (Model.Count > 0)
    {
        <div>
            <div class="table-responsive">
                <table class="table table-hover table-striped" id="myTable">
                    <thead>
                        <tr class="text-center">
                           
                            <th class="text-center">ID Venda</th>
                            <th class="text-center">Data</th>
                            <th class="text-center">ID Consumidor</th>
                            <th class="text-center">Visualizar</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                            <tr class="text-center">

                                <td>@Html.DisplayFor(modelItem => item.vendaId)</td>
                                <td>@Html.DisplayFor(modelItem => item.dataVenda)</td>
                                <td>@Html.DisplayFor(modelItem => item.consumidorId)</td>                                                                                                
                                <td class="btn btn-xs btn-default">@Html.ActionLink("Detalhes", "Detalhes", new { vendaId = item.vendaId })</td>                                                              
                            </tr>
                            
                        }
                    </tbody>
                </table>

                @if (Model.PageCount > 1)
                {
                    ViewBag.tipoConsulta = "Coluna";
                    <div class="text-center">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { pagina = page }))
                    </div>
                }
            </div>
        </div>
    }
</div>

